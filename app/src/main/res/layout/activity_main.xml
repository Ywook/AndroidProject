                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CleanView"
                        android:id="@+id/t_cleanview3"

                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="2dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#d3d2d2" />
                </LinearLayout>

                <!--<Button-->
                <!--android:visibility="gone"-->
                <!--android:text="알림받기"-->
                <!--android:id="@+id/button3"-->
                <!--android:layout_width="140dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:background="@drawable/button"-->
                <!--android:layout_above="@+id/circularprogressbar3"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true" />-->

                <com.examples.cleanproject.CircularProgressBar
                    android:id="@+id/circularprogressbar3"

                    style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    circular:cpb_progressColor="#0089df"
                    circular:cpb_hasShadow="true"
                    circular:cpb_strokeWidth="20"
                    circular:subtitle="subtitle"
                    circular:cpb_backgroundColor="#e4e5e7"
                    circular:title="Title"
                    circular:cpb_bottomtitle="1호"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/linear"
                    circular:cpb_titleColor="#008ae0"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="#d3d2d2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radius"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear2"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CleanView"
                        android:id="@+id/t_cleanview4"

                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="2dp"
                        android:background="#d3d2d2"/>
                </LinearLayout>

                <com.examples.cleanproject.CircularProgressBar
                    android:id="@+id/circularprogressbar4"
                    style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    circular:cpb_progressColor="#0089df"
                    circular:cpb_hasShadow="true"
                    circular:cpb_strokeWidth="20"
                    circular:subtitle="subtitle"
                    circular:cpb_backgroundColor="#e4e5e7"
                    circular:cpb_titleColor="#0089df"
                    circular:cpb_bottomtitle="2호"
                    circular:title="Title"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/linear2"
                    android:layout_centerHorizontal="true"/>
                <!--<Button-->
                <!--android:visibility="gone"-->
                <!--android:text="알림받기"-->
                <!--android:id="@+id/button4"-->
                <!--android:background="@drawable/button"-->
                <!--android:layout_width="140dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_below="@+id/circularprogressbar4"-->
                <!--android:layout_centerHorizontal="true"/>-->
            </RelativeLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>