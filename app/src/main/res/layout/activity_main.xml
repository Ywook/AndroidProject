<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:orientation="vertical"
    android:background="#d3d2d2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#666666"
        android:text="세탁기"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:id="@+id/textView4" />

    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="0,2"
        android:layout_weight="1"
        android:layout_height="0dp"
        >

        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radius"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CleanView"
                        android:id="@+id/t_cleanview1"
                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cirid"
                        android:text=""
                        android:textSize="2dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#d3d2d2" />
                </LinearLayout>

                <com.examples.cleanproject.CircularProgressBar
                    android:id="@+id/circularprogressbar1"
                    style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    circular:cpb_progressColor="#0089df"
                    circular:cpb_hasShadow="true"
                    circular:cpb_strokeWidth="20"
                    circular:subtitle="subtitle"
                    circular:cpb_backgroundColor="#e4e5e7"
                    circular:title="Title"
                    circular:cpb_bottomtitle="1호"

                    circular:cpb_titleColor="#008ae0"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:text="알림받기"
                    android:id="@+id/button1"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:layout_below="@+id/circularprogressbar1"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="#d3d2d2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radius"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CleanView"
                        android:id="@+id/t_cleanview2"

                        android:padding="5dp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="2dp"
                        android:background="#d3d2d2"/>
                </LinearLayout>


                <com.examples.cleanproject.CircularProgressBar
                    android:id="@+id/circularprogressbar2"
                    style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
                    android:layout_width="120dip"
                    android:layout_height="130dp"
                    circular:cpb_progressColor="#0089df"
                    circular:cpb_hasShadow="true"
                    circular:cpb_strokeWidth="20"
                    circular:subtitle="subtitle"
                    circular:cpb_backgroundColor="#e4e5e7"
                    circular:cpb_titleColor="#0089df"
                    circular:cpb_bottomtitle="2호"

                    circular:title="Title"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <Button
                    android:text="알림받기"
                    android:id="@+id/button2"
                    android:background="@drawable/button"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/circularprogressbar2"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:textSize="17dp"
        android:text="건조기"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#666666"
        android:fontFamily="sans-serif"
        android:id="@+id/textView5" />

    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="0,2"
        android:layout_weight="1"
        android:layout_height="0dp"
        >
        <TableRow
            android:layout_weight="1"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radius"
